<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LobbyFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:contentDescription="@string/background" />

    <View
        android:id="@+id/logo"
        android:layout_width="323dp"
        android:layout_height="323dp"
        android:layout_marginStart="-27dp"
        android:layout_marginTop="47dp"
        android:background="@drawable/logo"
        />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginStart="333dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/settingsbutton" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/button_addfriend"
            android:layout_width="313dp"
            android:layout_height="54dp"
            android:background="@drawable/addfriend"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/button_playw_friend"
            android:layout_width="313dp"
            android:layout_height="54dp"
            android:background="@drawable/friend"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/button_playw_random"
            android:layout_width="313dp"
            android:layout_height="54dp"
            android:background="@drawable/random"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/button_stats"
            android:layout_width="313dp"
            android:layout_height="54dp"
            android:background="@drawable/stats"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/button_rules"
            android:layout_width="313dp"
            android:layout_height="54dp"
            android:background="@drawable/rules"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

</FrameLayout>